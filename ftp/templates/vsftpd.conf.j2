# Funcionamiento en modo autónomo y desactivar IPV6 (bug;
# para que funcione FTPS Pasivo detrás de un router NAT)
listen=YES
listen_ipv6=NO
# Desactivamos modo Activo y forzamos modo Pasivo
port_enable=YES
pasv_enable=YES
pasv_addr_resolve=YES
# IP de la interfaz Wan del router
pasv_address=180.170.160.1
# Rango de puertos conexion de datos modo Pasivo
pasv_min_port=4000
pasv_max_port=4500
# Permitimos usuarios anónimos
anonymous_enable=YES
# Uncomment this to allow local users to log in.
local_enable=YES
write_enable=YES
local_umask=022
# Confinar usuarios
chroot_local_user=YES
allow_writeable_chroot=YES
# Mensajes personales usuarios
dirmessage_enable=YES
use_localtime=YES
xferlog_enable=YES
# Puerto para conexiones modo Activo; en este caso se podría # comentar
connect_from_port_20=YES
secure_chroot_dir=/var/run/vsftpd/empty
pam_service_name=vsftpd
# Configuración FTPS explícito
rsa_cert_file=/etc/ssl/certs/ssl-cert-snakeoil.pem
rsa_private_key_file=/etc/ssl/private/ssl-cert-snakeoil.key
ssl_enable=YES
force_local_data_ssl=YES
force_local_logins_ssl=YES
